{
  "name": "socobo-backend",
  "version": "0.3.0",
  "description": "Backend for Socobo",
  "private": true,
  "author": {
    "name": "flashback2k14"
  },
  "contributors": [
    "hetec"
  ],
  "license": "MIT",
  "scripts": {
    "clean": "npm-run-all clean:d clean:f clean:l",
    "clean:a": "npm-run-all clean clean:n",
    "clean:d": "rm -rf dist/",
    "clean:f": "rm -rf tmp/ socobo_data/",
    "clean:l": "rm -rf logs/",
    "clean:n": "rm -rf node_modules/",
    "create": "npm-run-all create:l create:f",
    "create:l": "mkdir -p logs",
    "create:f": "mkdir -p socobo_data tmp",
    "docker:c": "docker run -it --link socobo_mongodb_1:mongo --net socobo_default --rm mongo sh -c 'exec mongo \"mongodb:27017\"'",
    "docker:db:d": "cd ./sql && ./docker-start-mongodb.sh -d",
    "docker:db:t": "cd ./sql && ./docker-start-mongodb.sh -t",
    "docker:r": "docker rm --force $(docker ps -a -q)",
    "lint": "tslint 'src/**/*.ts' 'test/**/*.test.ts'",
    "lint:f": "tslint --force --format codeFrame 'src/**/*.ts' 'test/**/*.test.ts'",
    "serve": "node dist/server.js",
    "serve:w": "nodemon dist/server.js",
    "setup:db:d": "cd ./sql && ./locale-demo-data-creation.sh -d",
    "setup:db:t": "cd ./sql && ./locale-demo-data-creation.sh -t",
    "start": "npm run start:d",
    "start:p": "npm-run-all create tsc --parallel serve open:b",
    "start:d": "npm-run-all create tsc --parallel tsc:w serve:w",
    "start:m": "brew services start mongodb",
    "stop:m": "brew services stop mongodb",
    "test": "npm-run-all setup:db:t create test:m",
    "test:bc": "npm-run-all tsc lint test",
    "test:d": "npm-run-all docker:db:t create test:m",
    "test:m": "mocha --reporter spec --compilers ts:ts-node/register 'test/**/*.test.ts'",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "open:b": "open http://localhost:8282"
  },
  "dependencies": {
    "body-parser": "~1.17.2",
    "class-validator": "~0.7.2",
    "cors": "~2.8.4",
    "es6-shim": "~0.35.3",
    "express": "~4.15.5",
    "multer": "~1.3.0",
    "npm-run-all": "~4.0.2",
    "uuid": "~3.1.0",
    "winston": "~2.3.1"
  },
  "devDependencies": {
    "@types/bcrypt": "~1.0.0",
    "@types/body-parser": "~1.16.5",
    "@types/chai": "~4.0.4",
    "@types/chai-http": "~3.0.2",
    "@types/cors": "~2.8.1",
    "@types/express": "~4.0.39",
    "@types/jsonwebtoken": "~7.2.3",
    "@types/mocha": "~2.2.42",
    "@types/mongoose": "~4.7.21",
    "@types/multer": "^1.3.3",
    "@types/node": "~8.0.25",
    "@types/sinon": "~2.3.3",
    "@types/uuid": "~3.4.1",
    "@types/winston": "~2.3.5",
    "bcrypt": "~1.0.2",
    "chai": "~4.1.1",
    "chai-http": "~3.0.0",
    "jsonwebtoken": "~7.4.3",
    "mocha": "~3.5.0",
    "mongoose": "~4.11.8",
    "node-mocks-http": "~1.6.4",
    "nodemon": "~1.11.0",
    "sinon": "~3.2.1",
    "ts-node": "~3.3.0",
    "tslint": "~5.6.0",
    "tslint-no-unused-expression-chai": "~0.0.3",
    "typescript": "~2.4.2",
    "winston-spy": "~0.2.0"
  }
}
