{
  "name": "socobo-backend",
  "version": "0.0.12",
  "description": "Backend for Socobo",
  "private": true,
  "author": {
    "name": "flashback2k14"
  },
  "contributors": [
    "hetec"
  ],
  "license": "MIT",
  "scripts": {
    "start:p": "npm-run-all create:f create:l tsc --parallel serve open:b",
    "start:d": "npm-run-all create:f create:l tsc --parallel tsc:w serve:w",
    "start:m": "brew services start mongodb",
    "setup:db:d": "cd ./sql && ./automate-creation.sh -d",
    "setup:db:t": "cd ./sql && ./automate-creation.sh -t",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "serve": "node dist/server.js",
    "serve:w": "nodemon dist/server.js",
    "test": "npm-run-all setup:db:t create:l test:m",
    "test:m": "mocha --reporter spec --compilers ts:ts-node/register 'test/**/*.test.ts'",
    "create:l": "mkdir -p logs",
    "create:f": "mkdir -p socobo_data tmp",
    "clean": "rm -rf dist/",
    "clean:f": "rm -rf tmp/ socobo_data/",
    "clean:l": "rm -rf logs/",
    "clean:a": "rm -rf dist/ node_modules/ logs/ tmp/ socobo_data/",
    "open:b": "open http://localhost:8282",
    "lint": "tslint 'src/**/*.ts' 'test/**/*.test.ts'",
    "lint:f": "tslint --force --format codeFrame 'src/**/*.ts' 'test/**/*.test.ts'"
  },
  "dependencies": {
    "body-parser": "~1.17.2",
    "class-validator": "~0.7.2",
    "cors": "~2.8.4",
    "es6-shim": "~0.35.3",
    "express": "~4.15.4",
    "multer": "~1.3.0",
    "npm-run-all": "~4.0.2",
    "typegoose": "~3.1.1",
    "uuid": "~3.1.0",
    "winston": "~2.3.1"
  },
  "devDependencies": {
    "@types/bcrypt": "~1.0.0",
    "@types/body-parser": "~1.16.4",
    "@types/chai": "~4.0.3",
    "@types/chai-as-promised": "~0.0.31",
    "@types/chai-http": "~3.0.2",
    "@types/cors": "~2.8.1",
    "@types/express": "~4.0.36",
    "@types/jsonwebtoken": "~7.2.3",
    "@types/mocha": "~2.2.41",
    "@types/multer": "1.3.2",
    "@types/node": "~8.0.24",
    "@types/sinon": "~2.3.3",
    "@types/uuid": "^3.4.0",
    "@types/winston": "~2.3.4",
    "bcrypt": "~1.0.2",
    "chai": "~4.1.1",
    "chai-as-promised": "~7.1.1",
    "chai-http": "~3.0.0",
    "jsonwebtoken": "~7.4.3",
    "mocha": "~3.5.0",
    "node-mocks-http": "~1.6.4",
    "nodemon": "~1.11.0",
    "pg-promise": "~6.5.0",
    "sinon": "~3.2.1",
    "ts-node": "~3.3.0",
    "tslint": "~5.6.0",
    "typescript": "~2.4.2",
    "winston-spy": "~0.2.0"
  }
}
