{
  "name": "socobo-backend",
  "version": "0.0.2",
  "description": "Backend for Socobo",
  "private": true,
  "author": {
    "name": "flashback2k14"
  },
  "license": "MIT",
  "scripts": {
    "start:p": "npm-run-all tsc serve",
    "start:d": "npm-run-all tsc --parallel tsc:w serve:w",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "serve": "node dist/server.js",
    "serve:w": "nodemon dist/server.js",
    "test": "mocha --reporter spec --compilers ts:ts-node/register test/**/*.test.ts",
    "clean": "rm -r dist/",
    "clean:a": "rm -r dist/ node_modules/",
    "setup:db": "cd ./sql && ./automate-creation.sh"
  },
  "dependencies": {
    "body-parser": "~1.15.2",
    "cors": "~2.8.1",
    "express": "~4.14.0",
    "npm-run-all": "^3.1.2"
  },
  "devDependencies": {
    "@types/express": "~4.0.34",
    "@types/body-parser": "~0.0.33",
    "@types/cors": "~0.0.33",
    "concurrently": "~3.1.0",
    "nodemon": "~1.11.0",
    "ts-node": "~1.7.0",
    "typescript": "~2.0.10",
    "@types/mocha": "~2.2.33",
    "@types/chai": "~3.4.34",
    "@types/chai-http": "~0.0.29",
    "mocha": "~3.2.0",
    "chai": "~3.5.0",
    "chai-http": "~3.0.0",
    "@types/pg-promise": "~0.0.28",
    "pg-promise": "~5.4.7"
  }
}
