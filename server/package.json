{
  "name": "socobo-backend",
  "version": "0.0.5",
  "description": "Backend for Socobo",
  "private": true,
  "author": {
    "name": "flashback2k14"
  },
  "contributors": [
    "hetec"
  ],
  "license": "MIT",
  "scripts": {
    "start:p": "npm-run-all create:l tsc --parallel serve open:b",
    "start:d": "npm-run-all create:l tsc --parallel tsc:w serve:w",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "serve": "node dist/server.js",
    "serve:w": "nodemon dist/server.js",
    "test": "npm-run-all setup:db:t create:l test:m",
    "test:m": "mocha --reporter spec --compilers ts:ts-node/register 'test/recipe.routes.test.ts'",
    "create:l": "mkdir -p logs",
    "clean": "rm -r dist/",
    "clean:l": "rm -r logs/",
    "clean:a": "rm -r dist/ node_modules/ logs/",
    "setup:db:p": "cd ./sql && ./automate-creation.sh",
    "setup:db:d": "cd ./sql && ./automate-creation.sh -d",
    "setup:db:t": "cd ./sql && ./automate-creation.sh -t",
    "open:b": "open http://localhost:8282",
    "lint": "tslint 'src/**/*.ts' 'test/**/*.test.ts'",
    "lint:f": "tslint --force --format codeFrame 'src/**/*.ts' 'test/**/*.test.ts'"
  },
  "dependencies": {
    "body-parser": "~1.15.2",
    "class-validator": "~0.6.6",
    "cors": "~2.8.1",
    "es6-shim": "~0.35.2",
    "express": "~4.14.0",
    "npm-run-all": "~3.1.2",
    "winston": "~2.3.0"
  },
  "devDependencies": {
    "@types/body-parser": "~0.0.33",
    "@types/chai": "~3.4.34",
    "@types/chai-http": "~0.0.29",
    "@types/cors": "~0.0.33",
    "@types/express": "~4.0.34",
    "@types/mocha": "~2.2.33",
    "@types/pg-promise": "~0.0.28",
    "@types/sinon": "~1.16.33",
    "@types/bcrypt": "~1.0.0",
    "@types/jsonwebtoken": "~7.1.33",
    "@types/winston": "~2.2.0",
    "@types/chai-as-promised": "~0.0.29",
    "nodemon": "~1.11.0",
    "ts-node": "~1.7.0",
    "typescript": "~2.1.4",
    "chai": "~3.5.0",
    "chai-as-promised": "~6.0.0",
    "chai-http": "~3.0.0",
    "mocha": "~3.2.0",
    "node-mocks-http": "~1.5.5",
    "pg-promise": "~5.4.7",
    "sinon": "~1.17.6",
    "winston-spy": "~0.2.0",
    "bcrypt": "~1.0.1",
    "jsonwebtoken": "~7.2.1",
    "tslint": "~4.3.1"
  }
}
